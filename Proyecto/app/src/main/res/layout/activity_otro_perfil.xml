<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtroPerfil"
    android:background="#F7F7F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="9dp"
            android:background="@drawable/reply"
            android:contentDescription="@string/log_out"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/foto_ver_perfil"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/go_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/nombre_ver_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foto_ver_perfil"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/nombre_ver_perfil"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_ver_perfil"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:text="@string/ubicacion_ver_perfil"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/agregar_favoritos_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ubicacion"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:text="@string/agregar_favoritos"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="55dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/pink"/>

        <Button
            android:id="@+id/contactame_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/agregar_favoritos_btn"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:text="@string/contactame"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <RelativeLayout
            android:id="@+id/descripcion_perfil_propio"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/contactame_btn"
            android:layout_marginTop="15dp"
            android:background="#81EAF3">

            <TextView
                android:id="@+id/descripcion_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="9dp"
                android:text="@string/descripcion_texto"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="9dp"
                android:id="@+id/descripcion_completa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descripcion_texto"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. ." />
        </RelativeLayout>

        <Button
            android:layout_below="@+id/descripcion_perfil_propio"
            android:id="@+id/buttonAssets"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/opening_pdf"
            app:strokeColor="@color/red"
            android:textColor="@color/black"
            app:strokeWidth="2dp"
            android:textAllCaps="true"
            android:layout_marginHorizontal="55dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descripcion_perfil_propio" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
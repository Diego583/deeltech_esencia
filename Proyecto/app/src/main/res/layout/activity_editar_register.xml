<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarRegister"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageButton
            android:id="@+id/backRegister"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/reply"
            android:contentDescription="@string/go_back" />

        <TextView
            android:id="@+id/textViewUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Usuario"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="100dp"
            app:errorEnabled="true"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Usuario"
            android:textSize="17sp"
            app:errorEnabled="true"
            />


        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="@string/usuario"
            android:textColorHint="#757575"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:autofillHints="Usuario"
            app:errorEnabled="true"/>

        <TextView
            android:id="@+id/textViewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Número de contacto"
            android:textSize="17sp"
            app:errorEnabled="true"
            />

        <EditText
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Número de contacto"
            android:autoLink = "phone"
            android:textColorHint="#757575"
            android:inputType="text"
            android:minHeight="50dp"
            android:autofillHints="Numero de contacto" />





        <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:backgroundTint="#15CDCD"
            android:text="@string/continuar"
            android:textColor="#FFFF"
            tools:ignore="TextContrastCheck"
            app:errorEnabled="true"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>